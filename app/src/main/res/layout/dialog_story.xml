<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_rounded_16dp">

        <ImageView
            android:id="@+id/dialog_story_preview_iv"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/shape_rounded_12dp"
            android:backgroundTint="@color/White"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/dialog_story_title_tv"
            style="@style/h3_18_semibold"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="12dp"
            android:layout_marginTop="16dp"
            android:text="@string/story_dialog_title_example"
            android:maxLines="1"
            android:ellipsize="end"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/dialog_story_preview_iv"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/dialog_story_content_tv"
            style="@style/body2_14_medium"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="12dp"
            android:ellipsize="end"
            android:maxLines="3"
            android:text="@string/story_dialog_content_example"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/dialog_story_title_tv"
            app:layout_constraintTop_toBottomOf="@+id/dialog_story_title_tv" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/dialog_story_start_bt"
            style="@style/body1_14_bold"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/ic_gradation_btn"
            android:text="@string/story_start_btn"
            android:textAlignment="center"
            android:textColor="@color/White"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dialog_story_preview_iv" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>